{
  "hooks": {
    "after:bump": "pnpm run cli changelog --write && git add USER_CHANGELOG.md"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "npm": false,
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  }
}
